<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <!--Get JSON task-->
    <servlet-mapping>
        <servlet-name>GetJsonTaskServlet</servlet-name>
        <url-pattern>/get_task</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetJsonTaskServlet</servlet-name>
        <servlet-class>ru.home.taskswebservice.servlets.JsonTaskServlet</servlet-class>
    </servlet>


    <!--Add task-->
    <servlet-mapping>
        <servlet-name>AddTaskServlet</servlet-name>
        <url-pattern>/add_task</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddTaskServlet</servlet-name>
        <servlet-class>ru.home.taskswebservice.servlets.AddTaskServlet</servlet-class>
    </servlet>


    <!--Delete task-->
    <servlet-mapping>
        <servlet-name>DeleteTaskServlet</servlet-name>
        <url-pattern>/delete_task</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteTaskServlet</servlet-name>
        <servlet-class>ru.home.taskswebservice.servlets.DeleteTaskServlet</servlet-class>
    </servlet>


    <!--Update task-->
    <servlet-mapping>
        <servlet-name>UpdateTaskServlet</servlet-name>
        <url-pattern>/update_task</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateTaskServlet</servlet-name>
        <servlet-class>ru.home.taskswebservice.servlets.UpdateTaskServlet</servlet-class>
    </servlet>


</web-app>


